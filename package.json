{
  "name": "solidity-lang",
  "displayName": "Solidity+Yul Semantic Syntax",
  "description": "Solidity & Yul Semantic syntax Highlighting amd Language Support",
  "publisher": "ContractShark",
  "icon": "assets/icon.png",
  "license": "MIT",
  "version": "2.0.0",
  "engines": {
    "vscode": "^1.67.0"
  },
  "keywords": [
    "solidity",
    "yul",
    "yulp",
    "ethereum",
    "blockchain",
    "security",
    "echidna",
    "semantic",
    "semantic highlighting",
    "solidity security",
    "solidity audit",
    "language",
    "theme",
    "EVM",
    "evm-toolkit",
    "eth",
    "defi",
    "compiler",
    "assembly",
    "hardhat",
    "foundry",
    "bytecode",
    "opcode",
    "natspec"
  ],
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "activationEvents": [
    "onLanguage:solidity"
  ],
  "scripts": {
    "ci": "npm i -g vsce && npm run build",
    "build": "npx vsce package -o dist/",
    "test": "npx ajv-cli test -s tests/tmLanguage.schema.json -d syntaxes/solidity.tmLanguage.json --valid"
  },
  "bugs": {
    "url": "https://github.com/contractshark/scode-extenstion/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/contractshark/vscode-extenstion.git"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Themes"
  ],
  "configurationDefaults": {
    "solidity": {
      "editor.semanticHighlighting.enabled": true
    }
  },
  "contributes": {
    "languages": [
      {
        "id": "solidity",
        "aliases": [
          "Solidity",
          "solidity"
        ],
        "extensions": [
          ".sol",
          ".t.sol",
          ".solidity",
          ".slb"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "yul",
        "aliases": [
          "Yul",
          "Yulp",
          "ViaIR"
        ],
        "extensions": [
          ".yul",
          ".yulp"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "solidity",
        "scopeName": "source.solidity",
        "path": "./syntaxes/solidity.tmLanguage.json",
        "balancedBracketScopes": [
          "*"
        ],
        "unbalancedBracketScopes": [
          "meta.scope.case-pattern.solidity"
        ],
        "injectTo": [
          "source.solidity"
        ]
      },
      {
        "language": "yul",
        "scopeName": "source.yul",
        "path": "./syntaxes/yul.tmLanguage.json",
        "balancedBracketScopes": [
          "*"
        ],
        "unbalancedBracketScopes": [
          "meta.scope.case-pattern.yul"
        ],
        "injectTo": [
          "source.yul"
        ]
      }
    ]
  },
  "devDependencies": {
    "@vscode/test-web": "^0.0.33",
    "@vscode/vsce": "^2.16.0",
    "ajv": "8.11.2",
    "ajv-cli": "5.0.0",
    "prettier": "2.8.1",
    "vsce": "2.15.0",
    "vscode-textmate": "^9.2.0",
    "vscode-tmgrammar-test": "^0.1.3"
  }
}
